<%- include('partials/header'); -%>

<div style="text-align: center">
  <h2 style="font-family: itallic">Favourites:</h2>
  <a href="/dashboard/favourites/newfavourite"
    ><button type="button" class="btn btn-success" style="margin-bottom: 15px">
      Add New Fav
    </button></a
  >

  <div class="container" style="text-align: center">
    <% if (favourites.length > 0) { %>
    <div class="row">
      <div class="col-lg-4">
        <% for(fav of favourites) { %>

        <div class="card" style="width: 15rem">
          <img class="card-img-top" src="<%= fav.image %>" alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text"></p>
            <a href="#" class="btn btn-primary"></a>
            <form action="/dashboard/favourites/?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE" />
              <button
                type="submit"
                class="btn btn-danger"
                style="margin-top: 15px"
              >
                Delete
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% } else { %>
    <div>No fav now</div>
    <% } %>
  </div>
</div>

<%- include('partials/footer'); -%>
